<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAllCaps="false"
        android:text="Employee Information"
        android:background="#8e98cc"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingTop="28dp"
        android:layout_marginBottom="15dp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/searchdeletetxt"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:hint="Enter employee name or id to delete"
        android:layout_gravity="center"
        android:typeface="serif" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletegp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="9pt"
            android:textStyle="bold"
            android:typeface="serif" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="9pt"
            android:textStyle="bold"
            />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#1dccf8"
            android:text="Delete Info"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginRight="50dp"
            />
        <Button
            android:id="@+id/dback"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#1dccf8"
            android:text="Back"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/deleteinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="7pt"
            android:typeface="serif" />

    </ScrollView>

</LinearLayout>
