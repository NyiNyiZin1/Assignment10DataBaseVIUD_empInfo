<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.momozin.assignment10.UpdateActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#846a7e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Empolyee Information"
            android:layout_gravity="center_horizontal"
            android:textColor="#ef2828"
            android:textSize="10pt"
            android:textIsSelectable="false"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:layout_marginBottom="20dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:id="@+id/scrollView"
            android:layout_weight="0.44" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:paddingLeft="7dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Employee Id"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/eidtxt"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Name"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/enametxt"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRC No"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nrctxt"
                        android:width="600px"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/emailedit"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/pswedit"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rankedit"
                        android:layout_column="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/deptedit"
                        android:layout_column="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:id="@+id/gendertxt"
                        android:width="600px"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Of Birth"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateOfBirth"
                        android:id="@+id/dobtxt"
                        android:layout_column="1"
                        android:width="600px"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/phtxt"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="600px"
                        android:id="@+id/addressedit"
                        android:layout_gravity="center_horizontal"
                        android:typeface="serif"
                        android:textSize="9pt"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/ucancel"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/updateData" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/uback" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
